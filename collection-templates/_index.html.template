<!DOCTYPE html>
<html lang="de">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{BRAND_NAME}} â€” Design Collection</title>
<style>
  * { margin: 0; padding: 0; box-sizing: border-box; }
  :root {
    --primary: {{PRIMARY}};
    --primary-dark: {{PRIMARY_DARK}};
    --primary-rgb: {{PRIMARY_RGB}};
    --bg: {{BG}};
    --surface: {{SURFACE}};
    --sidebar-bg: {{SIDEBAR_BG}};
    --text: {{TEXT}};
    --muted: {{MUTED}};
  }
  body {
    background: var(--bg);
    font-family: system-ui, -apple-system, sans-serif;
    color: var(--text);
    min-height: 100vh;
  }
  .header {
    padding: 48px 40px 32px;
    border-bottom: 1px solid rgba(255,255,255,0.06);
  }
  .header h1 {
    font-size: 32px;
    font-weight: 800;
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 8px;
  }
  .header p {
    color: var(--muted);
    font-size: 14px;
  }
  .categories {
    padding: 24px 40px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    border-bottom: 1px solid rgba(255,255,255,0.04);
  }
  .cat-btn {
    padding: 6px 16px;
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,0.08);
    background: transparent;
    color: var(--muted);
    font-size: 13px;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
  }
  .cat-btn:hover, .cat-btn.active {
    background: rgba(var(--primary-rgb), 0.1);
    border-color: rgba(var(--primary-rgb), 0.3);
    color: var(--primary);
  }
  .grid {
    padding: 32px 40px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 16px;
  }
  .card {
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.06);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .card:hover {
    transform: translateY(-2px);
    border-color: rgba(var(--primary-rgb), 0.2);
    box-shadow: 0 8px 32px rgba(0,0,0,0.3);
  }
  .card-thumb {
    width: 100%;
    height: 180px;
    overflow: hidden;
    position: relative;
    background: var(--surface);
  }
  .card-thumb iframe {
    width: 800px;
    height: 600px;
    border: none;
    transform: scale(0.35);
    transform-origin: top left;
    pointer-events: none;
  }
  .card-info {
    padding: 12px 16px;
  }
  .card-info .name {
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 2px;
  }
  .card-info .path {
    font-size: 11px;
    color: var(--muted);
  }
  .section-title {
    padding: 32px 40px 12px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted);
  }
  @media (max-width: 768px) {
    .header, .categories, .grid, .section-title { padding-left: 20px; padding-right: 20px; }
    .grid { grid-template-columns: 1fr; }
  }
</style>
</head>
<body>
  <div class="header">
    <h1>{{BRAND_NAME}} Design Collection</h1>
    <p>110 design components, pages, and templates branded with {{BRAND_NAME}} design tokens.</p>
  </div>
  <div id="app"></div>
  <script>
    // Auto-discover categories from the collection
    const categories = [
      'animations', 'app-screens', 'app-store', 'brand-guidelines', 'branding',
      'content-pr', 'devex', 'diagrams', 'effects', 'emails', 'error-pages',
      'gamification', 'interactive', 'marketing', 'pages', 'print',
      'social-media', 'tools', 'ui-kit'
    ];

    const app = document.getElementById('app');

    // Category nav
    const nav = document.createElement('div');
    nav.className = 'categories';
    const allBtn = document.createElement('a');
    allBtn.className = 'cat-btn active';
    allBtn.textContent = 'All';
    allBtn.href = '#';
    allBtn.onclick = (e) => { e.preventDefault(); showAll(); };
    nav.appendChild(allBtn);

    categories.forEach(cat => {
      const btn = document.createElement('a');
      btn.className = 'cat-btn';
      btn.textContent = cat.replace(/-/g, ' ');
      btn.href = '#' + cat;
      btn.onclick = (e) => {
        e.preventDefault();
        filterCategory(cat);
        document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
      };
      nav.appendChild(btn);
    });
    app.appendChild(nav);

    // Grid placeholder
    const grid = document.createElement('div');
    grid.className = 'grid';
    grid.id = 'grid';
    app.appendChild(grid);

    function showAll() {
      document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active'));
      document.querySelector('.cat-btn').classList.add('active');
      document.querySelectorAll('.section').forEach(s => s.style.display = '');
      document.querySelectorAll('.card').forEach(c => c.style.display = '');
    }

    function filterCategory(cat) {
      document.querySelectorAll('.section').forEach(s => {
        s.style.display = s.dataset.cat === cat ? '' : 'none';
      });
    }

    // Note: In a static HTML context, files need to be listed manually or via server
    // This template works best when served through the Brand Machine app
    grid.innerHTML = '<div style="padding:40px;text-align:center;color:var(--muted)">Browse this collection through the Brand Machine app for the best experience.</div>';
  </script>
</body>
</html>
